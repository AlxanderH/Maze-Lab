		{true, true, true, true, true, false, false, false, true, true},
		{true, true, true, true, true, true, true, false, true, true},
		{true, true, true, true, true, true, true, false, true, true},
		{true, true, true, true, true, true, true, false, true, true},
	}),
	MAP2(new boolean[][] {
		{true, true, true, true, true, true, true, false, true, true},
		{true, true, true, true, true, true, true, false, true, true},
		{true, true, true, true, true, true, true, false, true, true},
		{true, true, true, true, true, true, true, false, true, true},
